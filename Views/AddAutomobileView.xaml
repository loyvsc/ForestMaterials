<Window x:Class="BuildMaterials.Views.AddAutomobileView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:BuildMaterials.ViewModels"
        mc:Ignorable="d" Height="300" Width="300">
    <Window.DataContext>
        <viewmodels:AddAutomobileViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25px"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Grid.Column="1">
            <TextBlock Text="Марка и модель автомобиля"/>
            <TextBox Text="{Binding Automobile.Name}"/>
            <TextBlock Text="Регистрационный номер" Margin="5,0,0,0"/>
            <TextBox Text="{Binding Automobile.RegistrationNumber}"/>
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding AddCommand}" x:Name="addComm"/>
                <Button Command="{Binding CancelCommand}" Content="Отмена"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
