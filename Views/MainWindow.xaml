<Window x:Class="BuildMaterials.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStartupLocation="CenterScreen"
        xmlns:viewmodels="clr-namespace:BuildMaterials.ViewModels" 
        xmlns:control="http://filterdatagrid.control.com/2021"
        xmlns:converters="clr-namespace:BuildMaterials.Converters"
        mc:Ignorable="d"
        Title="АРМ Менеджера Строительной Фирмы" MinHeight="450" MinWidth="760" Height="450" Width="760">
    <Window.DataContext>
        <viewmodels:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <CollectionViewSource x:Key="EmployeesList" Source="{Binding EmployeesList}"/>
        <CollectionViewSource x:Key="MaterialsList" Source="{Binding MaterialsList}"/>
        <CollectionViewSource x:Key="PayTypesList" Source="{Binding PayTypesList}"/>
        <converters:DateStringConverter x:Key="DateConverter"/>
        <converters:ContractTypeStringConverter x:Key="ContractTypeStringConverter"/>
        <converters:MaterialResponseStringConverter x:Key="MaterialResponseStringConverter"/>
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Key="F2" Modifiers="Control" Command="{Binding AddRowCommand}"/>
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20px"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="Информация">
                <MenuItem Header="Добавить" InputGestureText="F2" Command="{Binding AddRowCommand}"/>
                <MenuItem Header="Редактировать" Command="{Binding EditRowCommand}"/>
                <MenuItem Header="Удалить" Command="{Binding DeleteRowCommand}"/>
                <MenuItem Header="Выйти" Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="Экспорт">
                <MenuItem Header="В Excel" Command="{Binding ExportWithSaveCommand}"/>
            </MenuItem>
            <MenuItem Header="Справка">
                <MenuItem Header="О программме" Command="{Binding AboutProgrammCommand}"/>
                <MenuItem Header="Настройки" Command="{Binding SettingsCommand}"/>
            </MenuItem>
        </Menu>
        <TabControl Margin="5,3,5,5" Grid.Row="1" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Справочник" HorizontalAlignment="Stretch">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25px"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBox Grid.Column="1" Margin="0,0,0,5" Text="{Binding SearchText,UpdateSourceTrigger=PropertyChanged}"/>
                    <TabControl Grid.Column="1" Grid.Row="1" SelectionChanged="TabControl_SelectionChanged">
                        <TabItem Header="Материалы" x:Name="materialsTab">
                            <control:FilterDataGrid ItemsSource="{Binding MaterialsList}" Style="{StaticResource FilterDataGridStyle}"
                                                    SelectedItem="{Binding SelectedTableItem}" x:Name="materialsDataGrid">
                                <control:FilterDataGrid.Columns>
                                    <control:DataGridTextColumn MinWidth="45" IsColumnFiltered="True" Header="ID" Binding="{Binding ID}"/>
                                    <control:DataGridTextColumn MinWidth="115" IsColumnFiltered="True" Header="Наименование" Binding="{Binding Name,UpdateSourceTrigger=PropertyChanged}"/>
                                    <control:DataGridTextColumn MinWidth="118" IsColumnFiltered="True" Header="Производитель" Binding="{Binding Manufacturer,UpdateSourceTrigger=PropertyChanged}"/>
                                    <control:DataGridTextColumn MinWidth="155" IsColumnFiltered="True" Header="Стоимость за единицу" Binding="{Binding Price,UpdateSourceTrigger=PropertyChanged}"/>
                                    <control:DataGridTextColumn MinWidth="100" IsColumnFiltered="True" Header="Количество" Binding="{Binding Count,UpdateSourceTrigger=PropertyChanged}"/>
                                    <control:DataGridTextColumn MinWidth="115" IsColumnFiltered="True" Header="Ед. измерения" Binding="{Binding CountUnits,UpdateSourceTrigger=PropertyChanged}"/>
                                    <control:DataGridTextColumn MinWidth="145" IsColumnFiltered="True" Header="Дата поступления" Binding="{Binding EnterDate, UpdateSourceTrigger=PropertyChanged}"/>
                                </control:FilterDataGrid.Columns>
                            </control:FilterDataGrid>
                        </TabItem>
                        <TabItem Header="Сотрудники" x:Name="employersTab">
                            <control:FilterDataGrid ItemsSource="{Binding EmployeesList,UpdateSourceTrigger=PropertyChanged}"
                                                    SelectedItem="{Binding SelectedTableItem}" Style="{StaticResource FilterDataGridStyle}">
                                <control:FilterDataGrid.Columns>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="50" Header="ID" Binding="{Binding ID}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="90" Header="Фамилия" Binding="{Binding Surname,UpdateSourceTrigger=PropertyChanged}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="80" Header="Имя" Binding="{Binding Name,UpdateSourceTrigger=PropertyChanged}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="90" Header="Отчество" Binding="{Binding Pathnetic,UpdateSourceTrigger=PropertyChanged}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="100" Header="Должность" Binding="{Binding Position,UpdateSourceTrigger=PropertyChanged}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="130" Header="Номер телефона" Binding="{Binding PhoneNumber,UpdateSourceTrigger=PropertyChanged}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="130" Header="Уровень доступа" Binding="{Binding AccessLevelInString,UpdateSourceTrigger=PropertyChanged}" Visibility="{DynamicResource IsConfView}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="180" Header="Серия и номер пасспорта" Binding="{Binding Passport.Number,UpdateSourceTrigger=PropertyChanged}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="160" Header="Дата выдачи паспорта" Binding="{Binding Passport.IssueDate,UpdateSourceTrigger=PropertyChanged, Converter={StaticResource DateConverter}}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="195" Header="Материально ответственный"
                                                                Binding="{Binding FinResponsible,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource MaterialResponseStringConverter}}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="50" Header="Пароль" Binding="{Binding Password,UpdateSourceTrigger=PropertyChanged}"/>
                                </control:FilterDataGrid.Columns>
                            </control:FilterDataGrid>
                        </TabItem>
                        <TabItem Header="Организации" x:Name="orgTab">
                            <control:FilterDataGrid ItemsSource="{Binding OrganizationsList,UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedTableItem}"
                                                    Style="{StaticResource FilterDataGridStyle}">
                                <control:FilterDataGrid.Columns>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="50" Header="ID" Binding="{Binding ID}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="50" Header="УНП" Binding="{Binding UNP}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="190" Header="Наименование организации" Binding="{Binding CompanyName}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="240" Header="Краткое наименование организации" Binding="{Binding ShortCompamyName}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="70" Header="Адрес" Binding="{Binding Adress}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="100" Header="Номер МНС" Binding="{Binding MNSNumber}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="150" Header="Наименование МНС" Binding="{Binding MNSName}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="130" Header="Дата регистрации" Binding="{Binding RegistrationDateInString}"/>
                                </control:FilterDataGrid.Columns>
                            </control:FilterDataGrid>
                        </TabItem>
                        <TabItem Header="Физические лица" x:Name="individualsTab">
                            <control:FilterDataGrid ItemsSource="{Binding IndividualsList,UpdateSourceTrigger=PropertyChanged}"
                            SelectedItem="{Binding SelectedTableItem}" Style="{StaticResource FilterDataGridStyle}">
                                <control:FilterDataGrid.Columns>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="50" Header="ID" Binding="{Binding ID}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="90" Header="Фамилия" Binding="{Binding Surname,UpdateSourceTrigger=PropertyChanged}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="80" Header="Имя" Binding="{Binding Name,UpdateSourceTrigger=PropertyChanged}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="90" Header="Отчество" Binding="{Binding Pathnetic,UpdateSourceTrigger=PropertyChanged}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="130" Header="Номер телефона" Binding="{Binding PhoneNumber,UpdateSourceTrigger=PropertyChanged}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="180" Header="Серия и номер пасспорта" Binding="{Binding Passport.Number,UpdateSourceTrigger=PropertyChanged}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" MinWidth="160" Header="Дата выдачи паспорта" Binding="{Binding Passport.IssueDate,UpdateSourceTrigger=PropertyChanged, Converter={StaticResource DateConverter}}"/>
                                </control:FilterDataGrid.Columns>
                            </control:FilterDataGrid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="Учет" x:Name="uchetTab">
                <control:FilterDataGrid ItemsSource="{Binding TradesList,UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FilterDataGridStyle}"
                                            SelectedItem="{Binding SelectedTableItem,UpdateSourceTrigger=PropertyChanged}">
                    <control:FilterDataGrid.Columns>
                        <control:DataGridTextColumn MinWidth="30" IsColumnFiltered="True" Header="ID" Binding="{Binding ID}"/>
                        <control:DataGridTextColumn MinWidth="30" IsColumnFiltered="True" Header="Дата" Binding="{Binding Date}"/>
                        <control:DataGridTextColumn MinWidth="195" IsColumnFiltered="True" Header="ФИО сотрудника" Binding="{Binding Seller.FIO}"/>
                        <control:DataGridTextColumn MinWidth="30" IsColumnFiltered="True" Header="Количество" Binding="{Binding Count,UpdateSourceTrigger=PropertyChanged}"/>
                        <control:DataGridTextColumn MinWidth="30" IsColumnFiltered="True" Header="Стоимость" Binding="{Binding Price,UpdateSourceTrigger=PropertyChanged}"/>
                        <control:DataGridTextColumn MinWidth="30" IsColumnFiltered="True" Header="Сумма" Binding="{Binding Summ,UpdateSourceTrigger=PropertyChanged}"/>
                        <control:DataGridTextColumn MinWidth="195" IsColumnFiltered="True" Header="Тип оплаты" Binding="{Binding PayType.Name,UpdateSourceTrigger=PropertyChanged}"/>
                    </control:FilterDataGrid.Columns>
                </control:FilterDataGrid>
            </TabItem>
            <TabItem Header="Документы">
                <TabControl Grid.Column="1" SelectionChanged="TabControl_SelectionChanged">
                    <TabItem x:Name="ttnTab" Header="ТТН">
                        <control:FilterDataGrid ItemsSource="{Binding TTNList,UpdateSourceTrigger=PropertyChanged}"
                                                SelectedItem="{Binding SelectedTableItem,UpdateSourceTrigger=PropertyChanged}"
                                                Style="{StaticResource FilterDataGridStyle}">
                                <control:FilterDataGrid.Columns>
                                    <control:DataGridTextColumn IsColumnFiltered="True" Header="ID" Binding="{Binding ID}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" Header="Грузоотправитель" Binding="{Binding Shipper, UpdateSourceTrigger=PropertyChanged}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" Header="Грузополучатель" Binding="{Binding Consignee, UpdateSourceTrigger=PropertyChanged}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" Header="Плательщик" Binding="{Binding Payer, UpdateSourceTrigger=PropertyChanged}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" Header="Количество" Binding="{Binding Count, UpdateSourceTrigger=PropertyChanged}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" Header="Цена" Binding="{Binding Price, UpdateSourceTrigger=PropertyChanged}"/>
                                    <control:DataGridTextColumn MinWidth="195" IsColumnFiltered="True" Header="Наименование материала" Binding="{Binding Material.Name, UpdateSourceTrigger=PropertyChanged}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" Header="Ед. измерения" Binding="{Binding CountUnits, UpdateSourceTrigger=PropertyChanged}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" Header="Масса" Binding="{Binding Weight, UpdateSourceTrigger=PropertyChanged}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" Header="Сумма" Binding="{Binding Summ, UpdateSourceTrigger=PropertyChanged}"/>
                                    <control:DataGridTextColumn IsColumnFiltered="True" Header="Дата" Binding="{Binding Date,UpdateSourceTrigger=PropertyChanged}"/>
                                </control:FilterDataGrid.Columns>
                            </control:FilterDataGrid>
                        </TabItem>
                        <TabItem x:Name="accountTab" Header="Счет-фактура" >
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Visible">
                                <DataGrid Grid.Column="1" ItemsSource="{Binding AccountsList,UpdateSourceTrigger=PropertyChanged}" SelectionMode="Single" SelectionUnit="FullRow" SelectedItem="{Binding SelectedTableItem}" 
          CanUserAddRows="False" CanUserDeleteRows="False" AutoGenerateColumns="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID" IsReadOnly="True" Binding="{Binding ID}"/>
                                        <DataGridTextColumn Header="Дата" Binding="{Binding DateInString, UpdateSourceTrigger=PropertyChanged}"/>
                                        <DataGridTextColumn Header="Продавец" Binding="{Binding Seller, UpdateSourceTrigger=PropertyChanged}"/>
                                        <DataGridTextColumn Header="Грузоотправитель" Binding="{Binding ShipperName, UpdateSourceTrigger=PropertyChanged}"/>
                                        <DataGridTextColumn Header="Адрес грузоотправителя" Binding="{Binding ShipperAdress, UpdateSourceTrigger=PropertyChanged}"/>
                                        <DataGridTextColumn Header="Грузополучатель" Binding="{Binding ConsigneeName, UpdateSourceTrigger=PropertyChanged}"/>
                                        <DataGridTextColumn Header="Адрес грузополучателя" Binding="{Binding ConsigneeAdress, UpdateSourceTrigger=PropertyChanged}"/>
                                        <DataGridTextColumn Header="Покупатель" Binding="{Binding Buyer, UpdateSourceTrigger=PropertyChanged}"/>
                                        <DataGridComboBoxColumn Header="Наименование материала"
                        ItemsSource="{Binding Source={StaticResource MaterialsList}}"
                        DisplayMemberPath="Name" SelectedValuePath="ID"
                        SelectedValueBinding="{Binding Path=MaterialID, UpdateSourceTrigger=PropertyChanged}"/>
                                        <DataGridTextColumn Header="Количество" Binding="{Binding Count, UpdateSourceTrigger=PropertyChanged}"/>
                                        <DataGridTextColumn Header="Ед. измерения" Binding="{Binding CountUnits, UpdateSourceTrigger=PropertyChanged}"/>
                                        <DataGridTextColumn Header="Стоимость за единицу" Binding="{Binding Price, UpdateSourceTrigger=PropertyChanged}"/>
                                        <DataGridTextColumn Header="Налогагая ставка" Binding="{Binding Tax, UpdateSourceTrigger=PropertyChanged}"/>
                                        <DataGridTextColumn Header="Сумма налога" Binding="{Binding TaxSumm, UpdateSourceTrigger=PropertyChanged}"/>
                                        <DataGridTextColumn Header="Сумма" Binding="{Binding FinalSumm, UpdateSourceTrigger=PropertyChanged}"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem x:Name="contractTab" Header="Договор купли-продажи">
                            <DataGrid Grid.Column="1" ItemsSource="{Binding ContractsList,UpdateSourceTrigger=PropertyChanged}" 
                                     SelectionMode="Single" SelectionUnit="FullRow" SelectedItem="{Binding SelectedTableItem}" 
CanUserAddRows="False" CanUserDeleteRows="False" AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" IsReadOnly="True" Binding="{Binding ID}"/>
                                    <DataGridTextColumn Header="Продавец" Binding="{Binding Seller, UpdateSourceTrigger=PropertyChanged}"/>
                                    <DataGridTextColumn Header="Покупатель" Binding="{Binding Buyer, UpdateSourceTrigger=PropertyChanged}"/>
                                    <DataGridComboBoxColumn Header="Наименование материала"
                                                            ItemsSource="{Binding Source={StaticResource MaterialsList}}"
                                                            DisplayMemberPath="Name" SelectedValuePath="ID"
                                                            SelectedValueBinding="{Binding Path=MaterialID, UpdateSourceTrigger=PropertyChanged}"/>
                                    <DataGridTextColumn Header="Количество" Binding="{Binding Count, UpdateSourceTrigger=PropertyChanged}"/>
                                    <DataGridTextColumn Header="Ед. измерения" Binding="{Binding CountUnits, UpdateSourceTrigger=PropertyChanged}"/>
                                    <DataGridTextColumn Header="Стоимость" Binding="{Binding Price, UpdateSourceTrigger=PropertyChanged}"/>
                                    <DataGridTextColumn Header="Сумма" Binding="{Binding Summ, UpdateSourceTrigger=PropertyChanged}"/>
                                    <DataGridTextColumn Header="Дата" Binding="{Binding DateInString, UpdateSourceTrigger=PropertyChanged}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                        <TabItem x:Name="materialResponsibleTab" Header="Материально-ответственный отчет">
                            <DataGrid Grid.Column="1" ItemsSource="{Binding MaterialResponsesList,UpdateSourceTrigger=PropertyChanged}" SelectionMode="Single" SelectionUnit="FullRow" SelectedItem="{Binding SelectedTableItem}" 
                                      CanUserAddRows="False" AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" IsReadOnly="True" Binding="{Binding ID}"/>
                                    <DataGridComboBoxColumn Header="Наименование материала" ItemsSource="{Binding Source={StaticResource MaterialsList}}"
                        DisplayMemberPath="Name" SelectedValuePath="ID"
                        SelectedValueBinding="{Binding Path=MaterialID, UpdateSourceTrigger=PropertyChanged}"/>

                                    <DataGridTextColumn Header="Ед. измерения" Binding="{Binding CountUnits,UpdateSourceTrigger=PropertyChanged}"/>
                                    <DataGridTextColumn Header="Приход" Binding="{Binding Prihod,UpdateSourceTrigger=PropertyChanged}"/>
                                    <DataGridTextColumn Header="Расход" Binding="{Binding Rashod,UpdateSourceTrigger=PropertyChanged}"/>
                                    <DataGridTextColumn Header="Баланс на начало" Binding="{Binding BalanceAtStart,UpdateSourceTrigger=PropertyChanged}"/>
                                    <DataGridTextColumn Header="Баланс на конец" Binding="{Binding BalanceAtEnd, UpdateSourceTrigger=PropertyChanged}"/>
                                    <DataGridComboBoxColumn Header="Материально-ответственное лицо" ItemsSource="{Binding Source={StaticResource EmployeesList}}"
                        DisplayMemberPath="FIO" SelectedValuePath="ID"
                        SelectedValueBinding="{Binding Path=FinResponseEmployeeID, UpdateSourceTrigger=PropertyChanged}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                    </TabControl>
            </TabItem>
        </TabControl>
    </Grid>
</Window>